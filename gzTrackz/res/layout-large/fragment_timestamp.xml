<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:text="Date"
            android:textColor="#ffffff"
            android:textSize="34.5sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="105dp"
            android:background="#15000000"
            android:padding="15dp" >

            <TableRow
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:background="@drawable/table_border_header" >

                <TextView
                    android:layout_width="98dp"
                    android:layout_weight=".25"
                    android:background="@drawable/table_border_header"
                    android:gravity="center"
                    android:padding="7.5dip"
                    android:textSize="18sp"
                    android:text="Date"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="113dp"
                    android:layout_weight=".25"
                    android:background="@drawable/table_border_header"
                    android:gravity="center"
                    android:padding="7.5dip"
                    android:textSize="18sp"
                    android:text="Time-in"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="113dp"
                    android:layout_weight=".25"
                    android:background="@drawable/table_border_header"
                    android:gravity="center"
                    android:padding="7.5dip"
                    android:textSize="18sp"
                    android:text="Time-out"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="44dp"
                    android:background="@drawable/table_border_header"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_weight=".25"
                    android:padding="7.5dip" >
                </TextView>
            </TableRow>

            <ListView
                android:id="@+id/timeintimeoutlist"
                android:layout_width="match_parent"
                android:layout_height="489dp" />
        </TableLayout>
    </LinearLayout>

    <Button
        android:id="@+id/historyquerybutton"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:background="@drawable/loginbuttonstyle"
        android:text="Select History"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/norecordfound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="306dp"
        android:layout_marginLeft="80dp"
        android:text="No records found"
        android:textSize="30sp" />

</RelativeLayout>